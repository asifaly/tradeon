<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <h1>States</h1>
    </div>
    <div class="text-right">
      <%= link_to '<i class="fa fa-plus"></i> New State'.html_safe, new_state_path, :class=>'btn btn-primary' %>
    </div>

<table class="table table-sm">
  <thead> 
    <tr>
      <th>Code</th>
      <th>Gstcode</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.code %></td>
        <td><%= state.gstcode %></td>
        <td><%= state.name %></td>
        <td class="text-right"><%= link_to 'Show', state, :class=>'btn btn-primary btn-sm' %>
        <%= link_to 'Edit', edit_state_path(state), :class=>'btn btn-success btn-sm' %>
        <%= link_to 'Delete', state, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

