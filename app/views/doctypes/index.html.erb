<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <h1>Doctypes</h1>
    </div>
    <div class="text-right">
      <%= link_to '<i class="fa fa-plus"></i> New Doctype'.html_safe, new_doctype_path, :class=>'btn btn-primary' %>
    </div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @doctypes.each do |doctype| %>
      <tr>
                  <td><%= doctype.name %></td>
                  <td class="text-right">
            <%= link_to 'Show', doctype, :class=>'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_doctype_path(doctype), :class=>'btn btn-success btn-sm' %>
            <%= link_to 'Delete', doctype, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-sm' %></td>
      </tr>
      <% end %>
  </tbody>
</table>
