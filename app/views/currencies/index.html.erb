<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <h1>Currencies</h1>
    </div>
    <div class="text-right">
      <%= link_to '<i class="fa fa-plus"></i> New Currency'.html_safe, new_currency_path, :class=>'btn btn-primary' %>
    </div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.code %></td>
        <td><%= currency.name %></td>
        <td class="text-right">
        <%= link_to 'Show', currency, :class=>'btn btn-primary btn-sm' %>
        <%= link_to 'Edit', edit_currency_path(currency), :class=>'btn btn-success btn-sm' %>
        <%= link_to 'Delete', currency, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

